<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgCRT"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/user"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/tvCRTNick"
        app:layout_constraintStart_toEndOf="@+id/imgCRT"
        app:layout_constraintTop_toTopOf="@+id/imgCRT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지수"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="6dp" />

    <TextView
        android:id="@+id/tvCRTLastMsg"
        app:layout_constraintBottom_toBottomOf="@+id/imgCRT"
        app:layout_constraintStart_toEndOf="@+id/imgCRT"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="식사 맛있게 드세요~"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="261dp" />

    <TextView
        android:id="@+id/tvCRTLastMsgTime"
        app:layout_constraintStart_toEndOf="@+id/tvCRTNick"
        app:layout_constraintTop_toTopOf="@+id/imgCRT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오후 12:47"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="312dp"
        tools:layout_editor_absoluteY="39dp" />

</androidx.constraintlayout.widget.ConstraintLayout>