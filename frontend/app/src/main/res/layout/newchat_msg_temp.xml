<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvMsgOpp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/leftbubble"
        android:backgroundTint="#FBFBF8"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="채팅채팅"
        android:textColor="#3C3C3C"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvMsgMy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rightbubble"
        android:backgroundTint="#FFEB3B"
        android:hapticFeedbackEnabled="false"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:paddingLeft="4dp"
        android:paddingEnd="8dp"
        android:paddingRight="30dp"
        android:text="대화"
        android:textColor="#3C3C3C"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvTimeOpp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="오후 12:43"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMsgOpp"
        app:layout_constraintStart_toEndOf="@+id/tvMsgOpp"
        app:layout_constraintTop_toTopOf="@+id/tvMsgOpp"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvTimeMy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="오후 12:43"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvMsgMy"
        app:layout_constraintEnd_toStartOf="@+id/tvMsgMy"
        app:layout_constraintTop_toTopOf="@+id/tvMsgMy"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>